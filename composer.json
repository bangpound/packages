{
    "name": "bangpound/packages",
    "description": "experimental",
    "require": {
        "composer/satis": "dev-main"
    },
    "autoload": {
        "psr-0": {
            "": "src/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "bin-dir": "bin",
        "allow-plugins": {
            "composer/satis": true
        }
    },
    "scripts": {
        "build": [
            "uglifyjs views/app.js  -c -m > views/app.min.js",
            "bin/satis build"
        ]
    }
}
